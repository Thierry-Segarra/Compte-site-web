                    $err = $_GET['erreur'];
                    if($err==1 || $err==2){
                        echo "<p style='color:red'>Utilisateur ou mot de passe incorrect</p>";
                    }
                    if($err==3){
                        echo "<p style='color:green'>Connecter-vous</p>";
                    }

                }
                if(isset($_GET['dec'])){
                    $dec = $_GET['dec'];
                    if($dec==1){
                        session_start();
                        $_SESSION['id'] = "";
                        $_SESSION['username'] = "";
                        $_SESSION = array();
                        
                        session_destroy(); 
                        echo "<p style='color:green'>Vous etez deconnecter</p>";
                    }
